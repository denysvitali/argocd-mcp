# ArgoCD MCP Configuration
# ~/.config/argocd-mcp/config.yaml

# ArgoCD Server Configuration
argocd:
  # ArgoCD server address (default: localhost:8080)
  server: "localhost:8080"

  # Authentication URL (optional, for SSO)
  # auth_url: "https://argocd.example.com/auth/login"

  # Username for authentication (optional, if using token)
  # username: "admin"

  # Password for authentication (optional, if using token)
  # password: "your-password"

  # Authentication token (optional, can be obtained via username/password)
  # token: "your-auth-token"

  # Skip TLS certificate verification (default: false)
  # insecure: false

  # Path to TLS certificate file (optional)
  # cert_file: ""

# Server Configuration
server:
  # MCP endpoint type: stdio or sse (default: stdio)
  mcp_endpoint: "stdio"

  # Safe mode - restricts write operations for security
  # When enabled, only read operations are allowed:
  # - list_applications, get_application, get_application_manifests, get_application_events
  # - list_projects, get_project, get_project_events
  # - list_repositories, get_repository, validate_repository
  # - list_clusters, get_cluster
  # Sync operations are allowed but prune is disabled
  # (default: false)
  # safe_mode: false

# Logging Configuration
logging:
  # Log level: debug, info, warn, error (default: info)
  level: "info"

  # Log format: json or text (default: json)
  # format: "json"
